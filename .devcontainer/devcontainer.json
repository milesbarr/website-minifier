{
	"name": "Python 3",
	"image": "mcr.microsoft.com/devcontainers/python:3",
	"features": {
		"ghcr.io/devcontainers/features/python:1": {},
		"ghcr.io/devcontainers-contrib/features/black:2": {}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
